FROM kernsuite/base:3
MAINTAINER <ramaila.jat@gmail.com>
RUN docker-apt-install \
    python3-setuptools \
    python3-numpy \
    python3-scipy \
    python3-astropy \
    python3-astlib \
    python3-pip
ADD . /code
WORKDIR /code
RUN pip3 install .[python-numpy,testing]
RUN py.test -s -vvv /code/
