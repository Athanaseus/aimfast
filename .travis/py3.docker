FROM kernsuite/base:4
MAINTAINER <ramaila.jat@gmail.com>
RUN docker-apt-install \
    python3-setuptools \
    python3-numpy \
    python3-scipy \
    python3-astropy \
    python3-astlib \
    python3-pip
ADD . /code
WORKDIR /code
RUN pip3 install .[python3-numpy,testing] -U
RUN python3 -m pytest -s -vvv /code/
